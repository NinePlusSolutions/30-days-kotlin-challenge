<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardBackgroundColor="@color/grey"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineVertical0.10"
            app:layout_constraintGuide_percent="0.10"
            style="@style/guideLineVertical"
            />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineHorizontal0.25"
            app:layout_constraintGuide_percent="0.25"
            style="@style/guideLineHorizontal"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineHorizontal0.90"
            app:layout_constraintGuide_percent="0.90"
            style="@style/guideLineHorizontal"
            />

        <ImageView
            android:id = "@+id/iv_avatar"
            android:layout_width = "@dimen/_40sdp"
            android:layout_height = "@dimen/_40sdp"
            app:layout_constraintStart_toStartOf="@id/guideLineVertical0.10"
            app:layout_constraintEnd_toEndOf="@id/guideLineVertical0.10"
            app:layout_constraintTop_toTopOf="@id/guideLineHorizontal0.25"
            app:layout_constraintBottom_toBottomOf="@id/guideLineHorizontal0.25"
            android:background = "@drawable/avatar"
            android:contentDescription="@string/avatar" />

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/iv_avatar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/user_name"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_user_tagname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/user_tagname"
                    android:textColor="@color/lightgrey"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_user_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/time"
                    android:textColor="@color/lightgrey"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:text="@string/comment1"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/iv_avatar"
            app:layout_constraintTop_toTopOf="@id/guideLineHorizontal0.90"
            app:layout_constraintBottom_toBottomOf="@id/guideLineHorizontal0.90"
            android:layout_marginStart="@dimen/_15sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ic_chat"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/ic_baseline_mode_comment_24"
                android:contentDescription="@string/chat" />

            <ImageView
                android:id="@+id/iv_ic_replace"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_35sdp"
                android:background="@drawable/ic_baseline_cached_24"
                android:contentDescription="@string/replace" />

            <ImageView
                android:id="@+id/iv_ic_like"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_35sdp"
                android:background="@drawable/ic_baseline_favorite_border_24"
                android:contentDescription="@string/like" />

            <ImageView
                android:id="@+id/iv_ic_share"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginStart="@dimen/_35sdp"
                android:background="@drawable/ic_baseline_share_24"
                android:contentDescription="@string/share" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
