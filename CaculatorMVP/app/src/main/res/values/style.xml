<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="guideLineHorizontal" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="guideLineVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="btnNumber">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:radius">@dimen/_50sdp</item>
        <item name="backgroundTint">@color/btn_number</item>
        <item name="android:background">@drawable/btnnumber</item>

    </style>
    <style name="btnOperator">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_marginLeft">@dimen/_45sdp</item>
        <item name="backgroundTint">@color/btn_operator</item>
        <item name="android:background">@drawable/btnoperator</item>
    </style>
</resources>