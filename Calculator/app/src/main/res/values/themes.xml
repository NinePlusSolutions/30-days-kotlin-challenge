<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
<!--    button-->
    <style name="buttonNumber">
        <item name="android:background">@drawable/my_button_bg</item>
        <item name="android:backgroundTint">@color/java</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_55sdp</item>
        <item name="android:layout_width">@dimen/_60sdp</item>
    </style>
    <style name="buttonOperator">
        <item name="android:background">@drawable/my_button_bg</item>
        <item name="android:backgroundTint">@color/golden</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_55sdp</item>
        <item name="android:layout_width">@dimen/_60sdp</item>
    </style>
    <style name="buttonEqual">
        <item name="android:background">@drawable/my_button_bg</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:layout_height">@dimen/_55sdp</item>
        <item name="android:layout_width">@dimen/_280sdp</item>
    </style>
    <style name="guidelineHorizontal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="guidelineVertical">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>