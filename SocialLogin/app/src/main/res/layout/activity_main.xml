<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudColor"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        android:text="Hello Again"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txtSubTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="40sp"
        android:paddingEnd="20sp"
        android:textAlignment="center"
        android:layout_marginStart="40sp"
        android:layout_marginEnd="40sp"
        android:textSize="25sp"
        android:text="Wellcome back you've been missed"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edtUserName"
        android:background="@drawable/edittext_cus"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:paddingStart="25dp"
        android:hint="Enter UserName"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/txtSubTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/edtPass"
        android:background="@drawable/edittext_cus"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:paddingStart="25dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/edtUserName"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <TextView
        android:text="Recovery Password"
        android:textAlignment="textEnd"
        android:paddingEnd="35dp"
        android:textStyle="bold"
        android:id="@+id/txtForgot"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/edtPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnSignIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_cus"
        android:text="Sign in"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/txtForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/lnWith"
        android:orientation="horizontal"

        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/btnSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"

            android:layout_width="70dp"
            android:background="@color/black"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="15dp"
            android:layout_height="2dp"/>
        <TextView
            android:textSize="18sp"
            android:layout_marginEnd="15dp"
            android:text="Or continue with"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"

            android:layout_width="70dp"
            android:background="@color/black"
            android:layout_marginEnd="15dp"
            android:layout_height="2dp"/>
    </LinearLayout>
<LinearLayout
    app:layout_constraintTop_toBottomOf="@id/lnWith"
    android:layout_marginTop="50dp"
    android:layout_marginStart="130dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgGG"
        android:src="@drawable/gg"
        android:layout_width="50dp"
        android:layout_marginEnd="60dp"
        android:layout_height="50dp"/>
    <ImageView
        android:id="@+id/imgFB"
        android:src="@drawable/fb"
        android:layout_width="50dp"
        android:layout_marginEnd="30dp"
        android:layout_height="50dp"/>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>