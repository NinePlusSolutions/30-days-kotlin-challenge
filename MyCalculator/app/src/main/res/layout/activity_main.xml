<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/text_hint"
        android:padding="20dp">

        <TextView
            android:id="@+id/working_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/text_hinted"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/result_TV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/result_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/text_hinted"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:backgroundTint="@color/bisque"
            android:onClick="allClearAction"
            android:text="AC"
            android:textColor="@color/black" />

        <Button
            style="@style/buttonNumber"
            android:backgroundTint="@color/bisque"
            android:onClick="backSpaceAction"
            android:text="DL"
            android:textColor="@color/text_hinted" />

        <Button
            style="@style/buttonNumber"
            android:text="!" />

        <Button
            style="@style/buttonOperation"
            android:backgroundTint="@color/light_salmon"
            android:text="x" />

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:text="7" />

        <Button
            style="@style/buttonNumber"
            android:text="8" />

        <Button
            style="@style/buttonNumber"
            android:text="9" />

        <Button
            style="@style/buttonOperation"
            android:backgroundTint="@color/light_salmon"
            android:text="/" />

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:text="4" />

        <Button
            style="@style/buttonNumber"
            android:text="5" />

        <Button
            style="@style/buttonNumber"
            android:text="6" />

        <Button
            style="@style/buttonOperation"
            android:backgroundTint="@color/light_salmon"
            android:text="+" />

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:text="1" />

        <Button
            style="@style/buttonNumber"
            android:text="2" />

        <Button
            style="@style/buttonNumber"
            android:text="3" />

        <Button
            style="@style/buttonOperation"
            android:backgroundTint="@color/light_salmon"
            android:text="-" />

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:text="0" />

        <Button
            style="@style/buttonNumber"
            android:text="." />

        <Button
            style="@style/buttonNumber"
            android:layout_marginEnd="8dp"
            android:layout_weight="2"
            android:backgroundTint="@color/bisque"
            android:onClick="equalsAction"
            android:text="="
            android:textSize="40sp" />

    </LinearLayout>

</LinearLayout>