<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculator.CalculatorActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_corner"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textT"
        android:background="@drawable/bg_corner"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_below="@id/text"
        android:text=""
        android:textColor="@color/black"
        android:textSize="30sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textT"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:layout_marginHorizontal="5dp"
                android:text="7"
                android:id="@+id/text7"
                android:textSize="40sp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:text="8"
                android:id="@+id/text8"
                android:textSize="40sp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text9"
                android:backgroundTint="@color/grey"
                android:layout_marginHorizontal="5dp"
                android:text="9"
                android:textSize="40sp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textX"
                android:layout_marginEnd="5dp"
                android:backgroundTint="@color/grey"
                android:text="X"
                android:textSize="40sp"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text4"
                android:backgroundTint="@color/grey"
                android:layout_marginHorizontal="5dp"
                android:text="4"
                android:textSize="40sp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text5"
                android:backgroundTint="@color/grey"
                android:text="5"
                android:textSize="40sp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text6"
                android:backgroundTint="@color/grey"
                android:layout_marginHorizontal="5dp"
                android:text="6"
                android:textSize="40sp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textM"
                android:layout_marginEnd="5dp"
                android:backgroundTint="@color/grey"
                android:text="-"
                android:textSize="40sp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:backgroundTint="@color/grey"
                android:layout_marginHorizontal="5dp"
                android:text="1"
                android:textSize="40sp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text2"
                android:backgroundTint="@color/grey"
                android:text="2"
                android:textSize="40sp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:backgroundTint="@color/grey"
                android:layout_marginHorizontal="5dp"
                android:text="3"
                android:textSize="40sp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textP"
                android:layout_marginEnd="5dp"
                android:backgroundTint="@color/grey"
                android:text="+"
                android:textSize="40sp"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:layout_marginHorizontal="5dp"
                android:textSize="40sp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:text="0"
                android:id="@+id/text0"
                android:textSize="40sp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey"
                android:layout_marginHorizontal="5dp"
                android:textSize="40sp"
                android:text="/"
                android:id="@+id/textD"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginEnd="5dp"
                android:backgroundTint="@color/grey"
                android:text="="
                android:id="@+id/textE"
                android:textSize="40sp"
                android:layout_weight="1"/>

        </LinearLayout>



    </LinearLayout>








</RelativeLayout>